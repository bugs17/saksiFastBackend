generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}



model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username String
  password String
  role String
}


model Distrik {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  namaDistrik String
  kampung     Kampung[]
}

model Kampung {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  namaKampung String
  distrikId Int
  distrik Distrik @relation(fields: [distrikId], references: [id], onDelete: Cascade)
  tps Tps[]
}

model Saksi {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username String
  password String @unique
  saksi Tps?
}

model Tps {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nomorTps String
  kampungId Int
  kampung Kampung @relation(fields: [kampungId], references: [id], onDelete: Cascade)
  saksiId Int @unique
  saksi Saksi @relation(fields: [saksiId], references: [id], onDelete: Cascade)
}